mixin i(name)
	svg.icon(class='icon-' + name)
		use(xlink:href='img/sprite.svg#icon-' + name)

mixin header(classHeader, classBurger)
	.header.js-header#header(class=classHeader)
		.header__center.center
			a.header__logo(href="index.html")
				img.header__pic(src="img/logo-header-2.png" alt="")
			.header__social.header__social_main
				a.header__link(href="#")
					+i('dribbble')
					| LinkedIn
				a.header__link(href="#")
					+i('instagram')
					| GitHub
mixin wrapperDark
	.wrapper.wrapper_dark
		+contacts
		+footer

mixin figures
	.figures
		.figures__preview
			img.figures__pic(src="img/figures-1.png" alt="")
		.figures__preview
			img.figures__pic.js-parallax(data-scale="1.6" data-orientation="up" src="img/figures-2.png" alt="")
		.figures__preview
			img.figures__pic.js-parallax(data-scale="1.3" data-orientation="up" src="img/figures-3.png" alt="")
		.figures__preview
			img.figures__pic(src="img/figures-4.png" alt="")
		.figures__preview
			img.figures__pic.js-parallax(data-scale="2.3" data-orientation="down" src="img/figures-5.png" alt="")
		.figures__preview
			img.figures__pic.js-parallax(data-scale="2" data-orientation="up" src="img/figures-6.png" alt="")

